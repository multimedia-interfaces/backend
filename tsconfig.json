{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noEmit": true,
    "outDir": "build",
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": ["src", "scripts"]
}
